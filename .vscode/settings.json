{
	"[css]": {
		"editor.defaultFormatter": "aeschli.vscode-css-formatter"
	},
	"[html]": {
		"editor.defaultFormatter": "vscode.html-language-features"
	},
	"[javascript]": {
		"editor.defaultFormatter": "HookyQR.beautify"
	},
	"[json]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	},
	"[less]": {
		"editor.defaultFormatter": "HookyQR.beautify"
	},
	"[php]": {
		"editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
	},
	"[typescript]": {
		"editor.defaultFormatter": "vscode.typescript-language-features"
	},
	"autoprefixer.formatOnSave": true,
	"autoprefixer.options": {
		"grid": "autoplace",
		"stats": [
			"unreleased versions and not dead and > 0% and not operamini 0",
			"maintained node versions and not dead and > 0% and not operamini 0",
			"last 2 versions and not dead and > 0% and not operamini 0"
		]
	},
	"beautify.config": "",
	"beautify.language": {
		"js": {
			"type": [
				"javascript",
				"json",
				"jsonc"
			],
			"filename": [
				".jshintrc",
				".jsbeautifyrc"
			]
		},
		"css": [
			"css",
			"less",
			"scss"
		],
		"php": [
			"htm",
			"html",
			"php",
			"blade"
		],
		"html": [
			"htm",
			"blade",
			"html",
			"php",
			"erb"
		]
	},
	"compile-hero.generate-minified-css": true,
	"compile-hero.generate-minified-javascript": true,
	"compile-hero.language": {
		"js": {
			"type": [
				"javascript",
				"json",
				"jsonc"
			],
			"filename": [
				".jshintrc",
				".jsbeautifyrc"
			]
		},
		"css": [
			"css",
			"less",
			"scss"
		],
		"html": [
			"htm",
			"html"
		]
	},
	"css.fileExtensions": [
		"html",
		"css",
		"scss",
		"sass",
		"less"
	],
	"css.lint.compatibleVendorPrefixes": "warning",
	"css.lint.duplicateProperties": "warning",
	"css.lint.hexColorLength": "warning",
	"css.lint.importStatement": "warning",
	"css.lint.unknownVendorSpecificProperties": "ignore",
	"css.lint.zeroUnits": "error",
	"doiuse.browsers": [
		"unreleased versions and not dead and > 0% and not operamini 0",
		"maintained node versions and not dead and > 0% and not operamini 0",
		"last 2 versions and not dead and > 0% and not operamini 0"
	],
	"doiuse.enable": true,
	"doiuse.messageLevel": "Warning",
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true
	},
	"editor.detectIndentation": true,
	"editor.insertSpaces": false,
	"es6-css-minify.enableAutoprefixer": true,
	"es6-css-minify.enableAutoprefixerSelection": true,
	"es6-css-minify.minifyOnSave": "exists",
	"es6-css-minify.showLogOnError": false,
	"es6-css-minify.showLogOnWarning": false,
	"eslint.debug": true,
	"eslint.format.enable": true,
	"eslint.lintTask.enable": true,
	"eslint.options": {
		"rules": {
			"max-classes-per-file": "0"
		}
	},
	"files.eol": "\n",
	"files.insertFinalNewline": true,
	"files.trimTrailingWhitespace": true,
	"gremlins.characters": {
		"2013": {
			"description": "en dash",
			"level": "warning"
		},
		"2018": {
			"description": "left single quotation mark",
			"level": "warning"
		},
		"2019": {
			"description": "right single quotation mark",
			"level": "warning"
		},
		"2029": {
			"zeroWidth": true,
			"description": "paragraph separator",
			"level": "error"
		},
		"0003": {
			"description": "end of text",
			"level": "warning"
		},
		"000b": {
			"description": "line tabulation",
			"level": "warning"
		},
		"00a0": {
			"description": "non breaking space",
			"level": "info"
		},
		"00ad": {
			"description": "soft hyphen",
			"level": "info"
		},
		"200b": {
			"zeroWidth": true,
			"description": "zero width space",
			"level": "error"
		},
		"200c": {
			"zeroWidth": true,
			"description": "zero width non-joiner",
			"level": "warning"
		},
		"200e": {
			"zeroWidth": true,
			"description": "left-to-right mark",
			"level": "error"
		},
		"201c": {
			"description": "left double quotation mark",
			"level": "warning"
		},
		"201d": {
			"description": "right double quotation mark",
			"level": "warning"
		},
		"202c": {
			"zeroWidth": true,
			"description": "pop directional formatting",
			"level": "error"
		},
		"202d": {
			"zeroWidth": true,
			"description": "left-to-right override",
			"level": "error"
		},
		"202e": {
			"zeroWidth": true,
			"description": "right-to-left override",
			"level": "error"
		},
		"fffc": {
			"zeroWidth": true,
			"description": "object replacement character",
			"level": "error"
		}
	},
	"gremlins.showInProblemPane": true,
	"html.format.indentHandlebars": true,
	"html.format.indentInnerHtml": true,
	"html.format.maxPreserveNewLines": 0,
	"html.format.preserveNewLines": false,
	"html.format.wrapAttributes": "aligned-multiple",
	"html.format.wrapLineLength": 100,
	"intelephense.environment.shortOpenTag": false,
	"intelephense.files.associations": [
		"php",
		"html",
		"phps",
		"htm",
		"blade"
	],
	"intelephense.format.braces": "psr12",
	"intelephense.format.enable": true,
	"javascript.format.insertSpaceAfterConstructor": true,
	"javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": false,
	"javascript.format.semicolons": "remove",
	"javascript.preferences.importModuleSpecifier": "relative",
	"javascript.preferences.importModuleSpecifierEnding": "minimal",
	"javascript.preferences.quoteStyle": "single",
	"javascript.referencesCodeLens.enabled": true,
	"javascript.referencesCodeLens.showOnAllFunctions": true,
	"javascript.updateImportsOnFileMove.enabled": "always",
	"js/ts.implicitProjectConfig.checkJs": true,
	"js/ts.implicitProjectConfig.experimentalDecorators": true,
	"jshint.options": {
		"esversion": 6
	},
	"less.compile": {
		"compress": true,
		"sourceMap": true,
		"sourceMapFileInline": false,
		"relativeUrls": true,
		"ieCompat": true,
		"javascriptEnabled": true,
		"outExt": ".min.css",
		"out": false
	},
	"less.lint.compatibleVendorPrefixes": "warning",
	"less.lint.duplicateProperties": "warning",
	"less.lint.importStatement": "warning",
	"less.lint.unknownVendorSpecificProperties": "warning",
	"less.lint.zeroUnits": "error",
	"less.showErrors": true,
	"minify.css": {
		"advanced": true,
		"aggressiveMerging": true,
		"compatibility": "*",
		"inliner": {},
		"keepBreaks": false,
		"keepSpecialComments": "*",
		"mediaMerging": true,
		"processImport": true,
		"processImportFrom": [
			"all"
		],
		"rebase": true,
		"restructuring": true,
		"root": "${workspaceRoot}",
		"roundingPrecision": 2,
		"semanticMerging": false,
		"shorthandCompacting": true
	},
	"minify.html": {
		"caseSensitive": false,
		"collapseBooleanAttributes": true,
		"collapseWhitespace": true,
		"conservativeCollapse": false,
		"customAttrAssign": [],
		"customAttrCollapse": "",
		"customAttrSurround": [],
		"customEventAttributes": [
			"^on[a-z]{3,}$"
		],
		"decodeEntities": false,
		"html5": true,
		"ignoreCustomComments": [
			"^!"
		],
		"ignoreCustomFragments": [
			"<%[\\s\\S]*?%>",
			"<\\?[\\s\\S]*?\\?>"
		],
		"includeAutoGeneratedTags": true,
		"keepClosingSlash": false,
		"maxLineLength": false,
		"minifyCSS": true,
		"minifyJS": true,
		"minifyURLs": false,
		"preserveLineBreaks": false,
		"preventAttributesEscaping": false,
		"processConditionalComments": false,
		"processScripts": [],
		"quoteCharacter": "\"",
		"removeAttributeQuotes": false,
		"removeComments": false,
		"removeEmptyAttributes": false,
		"removeEmptyElements": false,
		"removeOptionalTags": false,
		"removeRedundantAttributes": false,
		"removeScriptTypeAttributes": false,
		"removeStyleLinkTypeAttributes": false,
		"sortAttributes": false,
		"sortClassName": false,
		"useShortDoctype": false
	},
	"minify.js": {
		"mangle": true,
		"compress": {
			"sequences": true,
			"properties": true,
			"dead_code": true,
			"drop_debugger": true,
			"unsafe": false,
			"unsafe_comps": false,
			"conditionals": true,
			"comparisons": true,
			"evaluate": true,
			"booleans": true,
			"loops": true,
			"unused": true,
			"hoist_funs": true,
			"keep_fargs": true,
			"keep_fnames": false,
			"hoist_vars": false,
			"if_return": true,
			"join_vars": true,
			"collapse_vars": false,
			"reduce_vars": false,
			"side_effects": true,
			"pure_getters": false,
			"pure_funcs": null,
			"negate_iife": false,
			"drop_console": false,
			"passes": 1,
			"global_defs": {}
		},
		"output": {
			"ascii_only": false,
			"inline_script": false,
			"max_line_len": 32000,
			"braces": false,
			"semicolons": true,
			"comments": false,
			"shebang": true,
			"preamble": null,
			"quote_style": "best"
		}
	},
	"minify.minifyExistingOnSave": true,
	"multiclip.formatAfterPaste": true,
	"php.validate.enable": true,
	"phpcs.enable": true,
	"phpcs.showSources": true,
	"phpcs.showWarnings": true,
	"phpcs.standard": "", // FIX
	"phpcs.warningSeverity": 1,
	"phpfmt.enable_auto_align": true,
	"phpfmt.indent_with_space": false,
	"phpfmt.passes": [
		"AddMissingParentheses",
		"AlignConstVisibilityEquals",
		"AlignDoubleArrow",
		"AlignDoubleSlashComments",
		"AlignEquals",
		"AlignGroupDoubleArrow",
		"AlignPHPCode",
		"AutoSemicolon",
		"ClassToSelf",
		"ClassToStatic",
		"ConvertOpenTagWithEcho",
		"DocBlockToComment",
		"IndentTernaryConditions",
		"JoinToImplode",
		"LongArray",
		"MergeElseIf",
		"SplitElseIf",
		"MergeNamespaceWithOpenTag",
		"OrganizeClass",
		"OrderAndRemoveUseClauses",
		"OrderMethodAndVisibility",
		"PrettyPrintDocBlocks",
		"PSR2EmptyFunction",
		"PSR2MultilineFunctionParams",
		"ReindentAndAlignObjOps",
		"ReindentSwitchBlocks",
		"RemoveSemicolonAfterCurly",
		"ReplaceIsNull",
		"RestoreComments",
		"ReturnNull",
		"ShortArray",
		"SortUseNameSpace",
		"StripExtraCommaInArray",
		"StripNewlineAfterClassOpen",
		"StripNewlineAfterCurlyOpen",
		"StripNewlineWithinClassBody",
		"TightConcat",
		"TrimSpaceBeforeSemicolon",
		"UpgradeToPreg",
		"PSR2KeywordsLowerCase",
		"PSR2LnAfterNamespace",
		"PSR2CurlyOpenNextLine",
		"PSR2ModifierVisibilityStaticOrder",
		"PSR2SingleEmptyLineAndStripClosingTag",
	],
	"phpfmt.psr2": false,
	"phpfmt.smart_linebreak_after_curly": true,
	"phpfmt.visibility_order": true,
	"phpformatter.arguments": [
		"--level=psr2",
		"--fixers=linefeed,short_tag,indentation"
	],
	"phpformatter.composer": true,
	"phpformatter.logging": false,
	"phpformatter.notifications": true,
	"prettier.eslintIntegration": true,
	"sass.format.debug": true,
	"sass.lint.enable": true,
	"scss.lint.compatibleVendorPrefixes": "warning",
	"scss.lint.duplicateProperties": "warning",
	"scss.lint.fontFaceProperties": "error",
	"scss.lint.importStatement": "warning",
	"scss.lint.unknownVendorSpecificProperties": "warning",
	"scss.lint.zeroUnits": "error",
	"todo-tree.general.tags": [
		"FIX",
		"IMPROVE",
		"ADD",
		"TEST",
		"REMOVE",
		"BOOKMARK"
	],
	"typescript.format.insertSpaceAfterConstructor": true,
	"typescript.format.insertSpaceAfterTypeAssertion": true,
	"typescript.implementationsCodeLens.enabled": true,
	"typescript.preferences.importModuleSpecifierEnding": "minimal",
	"typescript.preferences.includePackageJsonAutoImports": "on",
	"typescript.preferences.quoteStyle": "single",
	"typescript.referencesCodeLens.enabled": true,
	"typescript.referencesCodeLens.showOnAllFunctions": true,
	"typescript.updateImportsOnFileMove.enabled": "always",
	"xmlTools.enforcePrettySelfClosingTagOnFormat": true,
	"xmlTools.removeCommentsOnMinify": true,
	"xmlTools.splitAttributesOnFormat": true,
}